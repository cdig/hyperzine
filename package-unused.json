"asset-coffee:assemble": "fd . -e coffee asset | xargs awk '(FNR==1){print \"\\n\\n# \" FILENAME}1' node_modules/take-and-make/**/*.coffee node_modules/doom/*.coffee > temp/asset.coffee",
"asset-coffee:compiler": "coffee --bare --inline-map --output out/asset.js --compile temp/asset.coffee",
"asset-coffee:generate": "run-s asset-coffee:assemble asset-coffee:compiler",
"asset-coffee:observer": "onchange 'asset/**/*.coffee' -- npm run asset-coffee:generate",
"asset-html:generate": "cp asset/asset.html out/asset.html",
"asset-html:observer": "onchange 'asset/asset.html' -- npm run asset-html:generate",
"asset-scss:assemble": "fd . -e scss asset | xargs awk '(FNR==1){print \"\\n\\n// \" FILENAME}1' submodule/house-style/{vars,reset}.css > temp/asset.scss",
"asset-scss:compiler": "sass temp/asset.scss out/asset.css --no-source-map",
"asset-scss:generate": "run-s asset-scss:assemble asset-scss:compiler",
"asset-scss:observer": "onchange 'asset/**/*.scss' -- npm run asset-scss:generate",
