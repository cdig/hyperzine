{
  "name": "Hyperzine",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "main": "out/main.js",
  "scripts": {
    "app:coffee:assemble": "fd . -e coffee app | xargs awk '(FNR==1){print \"\\n\\n# \" FILENAME}1' node_modules/take-and-make/**/*.coffee node_modules/doom/*.coffee > temp/app.coffee",
    "app:coffee:compiler": "coffee --bare --inline-map --output out/app.js --compile temp/app.coffee",
    "app:coffee:generate": "run-s app:coffee:assemble app:coffee:compiler",
    "app:coffee:watch": "onchange 'app/**/*.coffee' -- npm run app:coffee:generate",
    "app:html:generate": "cp app/app.html out/app.html",
    "app:html:watch": "onchange 'app/app.html' -- npm run app:html:generate",
    "app:scss:assemble": "fd . -e scss app | xargs awk '(FNR==1){print \"\\n\\n// \" FILENAME}1' submodule/house-style/{vars,reset}.css > temp/app.scss",
    "app:scss:compiler": "sass temp/app.scss out/app.css --no-source-map",
    "app:scss:generate": "run-s app:scss:assemble app:scss:compiler",
    "app:scss:watch": "onchange 'app/**/*.scss' -- npm run app:scss:generate",
    "asset:coffee:assemble": "fd . -e coffee asset | xargs awk '(FNR==1){print \"\\n\\n# \" FILENAME}1' node_modules/take-and-make/**/*.coffee node_modules/doom/*.coffee > temp/asset.coffee",
    "asset:coffee:compiler": "coffee --bare --inline-map --output out/asset.js --compile temp/asset.coffee",
    "asset:coffee:generate": "run-s asset:coffee:assemble asset:coffee:compiler",
    "asset:coffee:watch": "onchange 'asset/**/*.coffee' -- npm run asset:coffee:generate",
    "asset:html:generate": "cp asset/asset.html out/asset.html",
    "asset:html:watch": "onchange 'asset/asset.html' -- npm run asset:html:generate",
    "asset:scss:assemble": "fd . -e scss asset | xargs awk '(FNR==1){print \"\\n\\n// \" FILENAME}1' submodule/house-style/{vars,reset}.css > temp/asset.scss",
    "asset:scss:compiler": "sass temp/asset.scss out/asset.css --no-source-map",
    "asset:scss:generate": "run-s asset:scss:assemble asset:scss:compiler",
    "asset:scss:watch": "onchange 'asset/**/*.scss' -- npm run asset:scss:generate",
    "main:coffee:assemble": "fd . -e coffee main | xargs awk '(FNR==1){print \"\\n\\n# \" FILENAME}1' node_modules/take-and-make/**/*.coffee node_modules/doom/*.coffee > temp/main.coffee",
    "main:coffee:compiler": "coffee --bare --inline-map --output out/main.js --compile temp/main.coffee",
    "main:coffee:generate": "run-s main:coffee:assemble main:coffee:compiler",
    "main:coffee:watch": "onchange 'main/**/*.coffee' -- npm run main:coffee:generate",
    "electron": "electron .",
    "init": "mkdir -p out temp",
    "start": "npm-run-all init *:*:generate electron --parallel *:*:watch"
  },
  "dependencies": {
    "doom": "ivanreese/doom",
    "preact": "latest",
    "take-and-make": "cdig/take-and-make"
  },
  "devDependencies": {
    "electron": "12.0.0-beta.14",
    "electron-reload": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0"
  }
}
