{
  "name": "Hyperzine",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "main": "out/main.js",
  "scripts": {
    "browser-coffee:assemble": "fd . -e coffee browser | xargs awk '(FNR==1){print \"\\n\\n# \" FILENAME}1' > temp/browser.coffee",
    "browser-coffee:compiler": "coffee --bare --inline-map --output out/browser.js --compile temp/browser.coffee",
    "browser-coffee:generate": "run-s browser-coffee:assemble browser-coffee:compiler",
    "browser-coffee:observer": "onchange 'browser/**/*.coffee' -- npm run browser-coffee:generate",
    "browser-html:generate": "cp browser/browser.html out/browser.html",
    "browser-html:observer": "onchange 'browser/browser.html' -- npm run browser-html:generate",
    "browser-scss:assemble": "fd . -e scss browser | xargs awk '(FNR==1){print \"\\n\\n// \" FILENAME}1' > temp/browser.scss",
    "browser-scss:compiler": "sass temp/browser.scss out/browser.css",
    "browser-scss:generate": "run-s browser-scss:assemble browser-scss:compiler",
    "browser-scss:observer": "onchange 'browser/**/*.scss' -- npm run browser-scss:generate",
    "common-coffee:assemble": "fd . -e coffee common | xargs awk '(FNR==1){print \"\\n\\n# \" FILENAME}1' node_modules/take-and-make/**/*.coffee submodule/bucket/{debounced,monkey-patch}.coffee node_modules/doom/doom.coffee > temp/common.coffee",
    "common-coffee:compiler": "coffee --bare --inline-map --output out/common.js --compile temp/common.coffee",
    "common-coffee:generate": "run-s common-coffee:assemble common-coffee:compiler",
    "common-coffee:observer": "onchange 'common/**/*.coffee' -- npm run common-coffee:generate",
    "common-scss:assemble": "fd . -e scss common | xargs awk '(FNR==1){print \"\\n\\n// \" FILENAME}1' submodule/house-style/{vars,reset}.css > temp/common.scss",
    "common-scss:compiler": "sass temp/common.scss out/common.css",
    "common-scss:generate": "run-s common-scss:assemble common-scss:compiler",
    "common-scss:observer": "onchange 'common/**/*.scss' -- npm run common-scss:generate",
    "db-coffee:assemble": "fd . -e coffee db | xargs awk '(FNR==1){print \"\\n\\n# \" FILENAME}1' > temp/db.coffee",
    "db-coffee:compiler": "coffee --bare --inline-map --output out/db.js --compile temp/db.coffee",
    "db-coffee:generate": "run-s db-coffee:assemble db-coffee:compiler",
    "db-coffee:observer": "onchange 'db/**/*.coffee' -- npm run db-coffee:generate",
    "db-html:generate": "cp db/db.html out/db.html",
    "db-html:observer": "onchange 'db/db.html' -- npm run db-html:generate",
    "db-scss:assemble": "fd . -e scss db | xargs awk '(FNR==1){print \"\\n\\n// \" FILENAME}1' > temp/db.scss",
    "db-scss:compiler": "sass temp/db.scss out/db.css",
    "db-scss:generate": "run-s db-scss:assemble db-scss:compiler",
    "db-scss:observer": "onchange 'db/**/*.scss' -- npm run db-scss:generate",
    "main-coffee:assemble": "fd . -e coffee main | xargs awk '(FNR==1){print \"\\n\\n# \" FILENAME}1' node_modules/take-and-make/**/*.coffee > temp/main.coffee",
    "main-coffee:compiler": "coffee --bare --inline-map --output out/main.js --compile temp/main.coffee",
    "main-coffee:generate": "run-s main-coffee:assemble main-coffee:compiler",
    "main-coffee:observer": "onchange 'main/**/*.coffee' -- npm run main-coffee:generate",
    "package": "electron-packager . --platform=darwin --arch=x64,arm64 --overwrite --icon=resources/icon.icns --ignore=\"(asset|browser|build|common|db|extracted|main|node_modules|resources|submodule|temp)/\"",
    "open": "open ./Hyperzine-darwin-arm64/Hyperzine.app",
    "clean": "rm -r out temp",
    "init": "mkdir -p out temp",
    "electron": "electron .",
    "watch": "npm-run-all --parallel *:observer",
    "start": "npm-run-all init *:generate watch"
  },
  "dependencies": {},
  "devDependencies": {
    "doom": "ivanreese/doom",
    "electron": "latest",
    "electron-packager": "latest",
    "npm-run-all": "latest",
    "onchange": "latest",
    "take-and-make": "cdig/take-and-make"
  }
}
